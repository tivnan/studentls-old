    <select id="getNotesNeedReview" resultMap="NoteWithStuNameResultMap">
        select
        <include refid="Column_List_With_Stu_Name"></include>
        from teacher
        left join course cs on teacher.teacher_id = cs.teacher_id
        left join hits h on cs.course_id = h.course_id
        left join note n on h.note_id = n.note_id
        left join student s on n.student_id = s.student_id
        where cs.teacher_id = #{i}
        and n.state >= 2
    </select>

